<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>BlogPress</title>
  <%- include('partials/styles.ejs') %>
</head>
<body>

  <%- include('partials/header.ejs') %>

  <div class="masthead">
    <div class="container h-100">
      <div class="row h-100 align-items-center">
        <div class="col-12 text-center">
          <h1 class="fw-light">Blog Press</h1>
          <p class="lead">A greater blog for yourself and friends!</p>
        </div>
      </div>
    </div>
  </div>

  <!-- Page Content -->
  <section class="py-5">
    <div class="container">
      <h2 class="fw-light">Lastest Posts</h2>
      <p class="lead">Check the lastest posts that you have commited!</p>
    </div>
  </section>

  <section>
    <div class="container">
      <% articles.forEach(article => { %>
        <div class="h-100 p-5 mb-3 bg-light border rounded-3">
          <h3 class="mb-4"><%= article.title %></h3>
          <a href="/<%= article.slug %>" class="btn btn-outline-secondary" type="button">See Article</a>
        </div>
      <% }) %>
    </div>
  </section>

  <div class="container">
    <div class="row mt-5 mb-5">
      <div class="col">
        <a class="btn btn-primary btn-lg" href="/articles/list">See All Articles >></a>
      </div>
    </div>
  </div>

  <%- include('partials/scripts.ejs') %>
</body>
</html>
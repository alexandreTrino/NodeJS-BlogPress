<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>BlogPress</title>
  <%- include('../../partials/styles.ejs') %>
</head>
<body>

  <%- include('../../partials/header.ejs') %>

  <section>
    <div class="container">
        <h1 class="mb-4">Register</h1>

        <% if (error != 0) { %>
          <div class="alert alert-warning d-flex align-items-center" role="alert">
            <svg class="bi flex-shrink-0 me-2" role="img" aria-label="Warning:"><use xlink:href="#exclamation-triangle-fill"></use></svg>
            <div>This email is already registered! Please choose another email.</div>
          </div>
        <% } %>

        <form action="/save-user" method="post" class="form">
            <label for="name" class="mb-1">Name</label>
            <input type="text" name="name" class="form-control" placeholder="Ex: Jhon">
            <br>
            <label for="email" class="mb-1">Email</label>
            <input type="email" name="email" class="form-control" placeholder="Ex: jhon@email.com">
            <br>
            <label for="password" class="mb-1">Password</label>
            <input type="password" name="password" class="form-control" placeholder="Create a secure password">
            <br>
            <button type="submit" class="btn btn-primary">Register</button>
        </form>
    </div>
  </section>

  <%- include('../../partials/scripts.ejs') %>
</body>
</html>
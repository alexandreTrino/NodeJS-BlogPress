<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>BlogPress | Users List</title>

    <%- include('../../partials/styles.ejs') %>
    
</head>
<body>

    <%- include('../../partials/header.ejs') %>

    <div class="container">
        <br><br><br>
        <h1>Users List</h1>
        <br>
        <a href="/admin/user/register" class="btn btn-primary">+ User</a>
        <br><br>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Email</th>
                </tr>
            </thead>
            <tbody>
                <% users.forEach(user => { %>
                    <tr>
                        <td><%= user.id %></td>
                        <td><%= user.name %></td>
                        <td><%= user.email %></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
       
    </div>

    <%- include('../../partials/scripts.ejs') %>

</body>
</html>
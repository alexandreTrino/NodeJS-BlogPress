<!DOCTYPE html>
    <html lang="en">
    <head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>BlogPress</title>
    <%- include('partials/styles.ejs') %>
</head>
<body>

    <%- include('partials/header.ejs') %>

    <br><br>

    <!-- Page Content -->
    <section class="py-5">
        <div class="container">
            <h1 class="fw-light"><%= category.title %></h1>
            <p class="lead">Exibição de todos os artigos da categoria.</p>
        </div>
    </section>

    <section>
        <div class="container">
            <% if (articles.length > 0) { %>
                <% articles.forEach(article => { %>
                    <div class="h-100 p-5 mb-3 bg-light border rounded-3">
                    <h3 class="mb-4"><%= article.title %></h3>
                    <a href="/<%= article.slug %>" class="btn btn-outline-secondary" type="button">Ver Artigo</a>
                    </div>
                <% }) %>
            <% } else { %>
                <b class="lead">There are still not articles published for this category.</b>
            <% } %>
        </div>
    </section>

    <%- include('partials/scripts.ejs') %>
    </body>
</html>